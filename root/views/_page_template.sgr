doctype html
html
  head
    block(name='meta')
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible' content='IE=edge, chrome=1')
      meta(name='description' content='')
      meta(name='author' content='<%= github_username %>')
      meta(name="viewport" content="width=device-width, initial-scale=1")

    block(name='title')
      title My Cool Blog: Page {{ _currentPage.page }}

    block(name='stylesheets')
      link(rel='stylesheet' href='/css/index.css')

  body(role='document')
    main(role='main' id='{{ pageId }}')
      h1 My Cool Blog: Page {{ _currentPage.page }}
      ul
        each(loop='post in _currentPage.posts')
          li
            a(href='{{ post._path.slice(0, -4) }}') {{ post.title }}

    block(name='javascript')
      script(src='/js/main.js' defer)
