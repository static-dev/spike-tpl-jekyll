extends(src='layout.sgr')
  block(name='content')
    h1 My Cool Blog

    ul
      each(loop='post in _pages.posts[0].posts')
        li
          a(href='{{ post._path.slice(0, -4) }}') {{ post.title }}

    if(condition='_pages.posts[1]')
      a(href='{{ _pages.posts[1].path }}') Next Page &raquo;
